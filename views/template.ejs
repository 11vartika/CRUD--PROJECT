<!DOCTYPE html>
<html lang="en">
<head>
  <title>Fetch using MySQL and Node.js</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<% if(message.success){ %>
  <div class="alert alert-success" role="alert">
    <%= message.success %>
  </div>
  <% } %>
<body onload="myFunction()">
        <h2><center>Users Information</center> </h2>
    <div id="htmlContent">
        <table id="example"  class="table">
          <thead>
            <tr>
              <th>S.No</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Address</th>
              <th>State</th>
              <th>City</th>
              <th>Postal Code</th>
          
            </tr>
          </thead>
          <tbody>
            <% if(userData.length!=0){ var i=1; userData.forEach(function(data){ %>
              <tr>
                <td>
                  <%=data.id; %>
                </td>
                <td>
                  <%=data.user_name %>
                </td>
                <td>
                  <%=data.user_pass %>
                </td>
                <td>
                  <%=data.address %>
                </td>
                <td>
                  <%=data.state %>
                </td>
                <td>
                  <%=data.city %>
                </td>
                <td>
                  <%=data.postal %>
                </td>

               

              </tr>
              <% i++; }) %>
                <% } else{ %>
                  <tr>
                    <td colspan="7">No Data Found</td>
                  </tr>
                  <% } %>
          </tbody>

        </table>
      </div>
      <td style="font-size:11px;text-align: center; margin-bottom:5px ;" >
        <strong>
        <%= new Date().toISOString().slice(0, 10);%>
        </strong>
</td>
</body>
</html>
