      <h2 style="color: #957dad;">
        <center>Users Details</center>
      </h2>
      <a href="/create/form"><button type="button" class="btn btn-primary" style="margin-top:-40px;float: right;">Create
          Users</button></a>
      </div>
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet"
        type="text/css">

      <div id="htmlContent">
        <table id="example">
          <thead>
            <tr>
              <th>S.No</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th> NRI </th>
              <th>Address</th>

              <th>State</th>
              <th>City</th>
              <th>Postal Code</th>


              <th>Edit</th>
              <th>Delete</th>
              <th>Pdf</th>
            </tr>
          </thead>
          <tbody>
            <% if(userData.length!=0){ var i=1; userData.forEach(function(data){ %>
              <tr>
                <td>
                  <%=data.id %>
                </td>
                <td>
                  <%=data.user_name %>
                </td>
                <td>
                  <%=data.user_pass %>
                </td>
                <td>
                  <%=data.nri=='0' ? 'yes' : 'no' %>
                </td>
                <td>
                  <%=data.address %>
                </td>

                <td>
                  <%=data.state %>
                </td>
                <td>
                  <%=data.city %>
                </td>
                <td>
                  <%=data.postal %>
                </td>


                <td><button type="button" class="btn btn-primary" data-toggle="modal"
                    data-target="#exampleModal<%=data.id; %>">
                    Edit
                  </button>
                  <div class="modal fade" id="exampleModal<%=data.id; %>" tabindex="-1" role="dialog"
                    aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h4 class="modal-title" id="exampleModalLabel">Are you sure?</h4>
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <div class="modal-body">
                          <p>Do you really want to Edit these records? </p>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-primary" data-dismiss="modal">No</button>

                          <a href="/index/edit/<%=data.id%>"><button type="button"
                              class="btn btn-primary">Yes</button></a>
                        </div>
                      </div>
                    </div>
                  </div>
                </td>
                <td><button type="button" class="btn btn-primary" data-toggle="modal"
                    data-target="#exampleModal1<%=data.id%>">
                    Delete
                  </button>
                  <div class="modal fade" id="exampleModal1<%=data.id; %>" tabindex="-1" role="dialog"
                    aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h4 class="modal-title" id="exampleModalLabel">Are you sure?</h4>
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <div class="modal-body">
                          <p>Do you really want to delete these record ? This process cannot be
                            undone. </p>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                          <a href="/index/delete/<%=data.id%>"><button type="button"
                              class="btn btn-primary">Delete</button></a>
                        </div>
                      </div>
                    </div>
                  </div>

                </td>
                <td> <a href="/template/generate_pdf/<%=data.id%>"><button type="button"
                      class="btn btn-primary">Generate
                      pdf</button></a></td>
              </tr>
              <% i++; }) %>
                <% } else{ %>
                  <tr>
                    <td colspan="7">No Data Found</td>
                  </tr>
                  <% } %>
          </tbody>

        </table>
      </div>
      <a href="/template/generate"><button type="button" class="btn btn-primary">Generate pdf</button></a>

